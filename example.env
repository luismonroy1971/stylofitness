# ==========================================
# STYLOFITNESS - CONFIGURACIÓN DE EJEMPLO
# Copia este archivo como .env y ajusta los valores
# ==========================================

# ==========================================
# CONFIGURACIÓN DE LA APLICACIÓN
# ==========================================

# Nombre de la aplicación
APP_NAME=STYLOFITNESS

# Entorno (development, testing, production)
APP_ENV=development

# Modo debug (true/false)
APP_DEBUG=true

# Versión de la aplicación
APP_VERSION=1.0.0

# URL base de la aplicación (sin barra final)
APP_URL=http://localhost/stylofitness

# Zona horaria
APP_TIMEZONE=America/Lima

# ==========================================
# CONFIGURACIÓN DE BASE DE DATOS
# ==========================================

# Host de la base de datos
DB_HOST=localhost

# Puerto de la base de datos (3306 por defecto para MySQL)
DB_PORT=3306

# Nombre de la base de datos
DB_DATABASE=stylofitness_gym

# Usuario de la base de datos
DB_USERNAME=root

# Contraseña de la base de datos
DB_PASSWORD=

# Prefijo de tablas (opcional)
DB_PREFIX=sf_

# Charset de la base de datos
DB_CHARSET=utf8mb4

# Collation de la base de datos
DB_COLLATION=utf8mb4_unicode_ci

# ==========================================
# CONFIGURACIÓN DE CACHE
# ==========================================

# Habilitar cache (true/false)
CACHE_ENABLED=true

# Tiempo de cache por defecto (en segundos)
CACHE_TIME=3600

# Driver de cache (file, redis, memcached)


# ==========================================
# CONFIGURACIÓN DE SESIONES
# ==========================================

# Tiempo de vida de sesiones (en minutos)
SESSION_LIFETIME=120

# Driver de sesiones (file, database, redis)
SESSION_DRIVER=file

# Nombre de la cookie de sesión
SESSION_COOKIE_NAME=stylofitness_session

# ==========================================
# CONFIGURACIÓN DE UPLOADS
# ==========================================

# Tamaño máximo de archivos subidos
UPLOAD_MAX_SIZE=50M

# Directorio de uploads (relativo a public/)
UPLOAD_DIR=uploads

# Tipos de archivos permitidos para imágenes
UPLOAD_ALLOWED_IMAGES=jpg,jpeg,png,gif,webp

# Tipos de archivos permitidos para videos
UPLOAD_ALLOWED_VIDEOS=mp4,webm,ogg,avi,mov

# Calidad de compresión de imágenes (1-100)
IMAGE_QUALITY=85

# ==========================================
# CONFIGURACIÓN DE EMAIL
# ==========================================

# Driver de email (smtp, sendmail, mail)
MAIL_DRIVER=smtp

# Host del servidor SMTP
MAIL_HOST=smtp.gmail.com

# Puerto SMTP
MAIL_PORT=587

# Encriptación (tls, ssl, null)
MAIL_ENCRYPTION=tls

# Usuario SMTP
MAIL_USERNAME=tu-email@gmail.com

# Contraseña SMTP
MAIL_PASSWORD=tu-password-de-aplicacion

# Email remitente
MAIL_FROM_ADDRESS=noreply@stylofitness.com

# Nombre del remitente
MAIL_FROM_NAME=STYLOFITNESS

# ==========================================
# CONFIGURACIÓN DE PAGOS
# ==========================================

# PayPal
PAYPAL_CLIENT_ID=
PAYPAL_CLIENT_SECRET=
PAYPAL_MODE=sandbox

# Stripe
STRIPE_PUBLIC_KEY=
STRIPE_SECRET_KEY=

# MercadoPago (para Perú)
MERCADOPAGO_PUBLIC_KEY=
MERCADOPAGO_ACCESS_TOKEN=

# ==========================================
# CONFIGURACIÓN DE APIs EXTERNAS
# ==========================================

# Google Maps API (para ubicación de sedes)
GOOGLE_MAPS_API_KEY=

# YouTube API (para videos de ejercicios)
YOUTUBE_API_KEY=

# Facebook App (para login social)
FACEBOOK_APP_ID=
FACEBOOK_APP_SECRET=

# Google OAuth (para login social)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# ==========================================
# CONFIGURACIÓN DE SEGURIDAD
# ==========================================

# Clave secreta de la aplicación (generar una nueva)
APP_KEY=your-secret-app-key-here-32-chars

# Clave para encriptación de datos sensibles
ENCRYPTION_KEY=your-encryption-key-here-32-chars

# Tiempo de expiración de tokens (en minutos)
TOKEN_EXPIRATION=60

# ==========================================
# CONFIGURACIÓN DE LOGS
# ==========================================

# Nivel de logs (debug, info, warning, error)
LOG_LEVEL=debug

# Canal de logs (file, database, syslog)
LOG_CHANNEL=file

# Rotación de logs (daily, weekly, monthly)
LOG_ROTATION=daily

# ==========================================
# CONFIGURACIÓN DE DESARROLLO
# ==========================================

# Mostrar errores PHP (true/false)
DISPLAY_ERRORS=true

# Reportar todos los errores PHP (true/false)
ERROR_REPORTING=true

# Habilitar query log (true/false)
QUERY_LOG=true

# ==========================================
# CONFIGURACIÓN ESPECÍFICA DEL GIMNASIO
# ==========================================

# Nombre del gimnasio principal
GYM_NAME=STYLOFITNESS GYM

# Dirección del gimnasio principal
GYM_ADDRESS=Av. Principal 123, San Isidro, Lima

# Teléfono del gimnasio
GYM_PHONE=+51 1 234-5678

# Email de contacto
GYM_EMAIL=contacto@stylofitness.com

# Horarios de atención
GYM_HOURS=Lunes a Viernes: 5:00 AM - 11:00 PM, Sábados: 6:00 AM - 10:00 PM, Domingos: 7:00 AM - 9:00 PM

# Moneda por defecto
DEFAULT_CURRENCY=PEN

# ==========================================
# CONFIGURACIÓN DE NOTIFICACIONES
# ==========================================

# Habilitar notificaciones push (true/false)
PUSH_NOTIFICATIONS=true

# Habilitar notificaciones por email (true/false)
EMAIL_NOTIFICATIONS=true

# Habilitar notificaciones SMS (true/false)
SMS_NOTIFICATIONS=false

# API de SMS (Twilio, etc.)
SMS_API_KEY=
SMS_API_SECRET=

# ==========================================
# CONFIGURACIÓN DE BACKUP
# ==========================================

# Habilitar backup automático (true/false)
AUTO_BACKUP=true

# Frecuencia de backup (daily, weekly, monthly)
BACKUP_FREQUENCY=daily

# Retener backups por X días
BACKUP_RETENTION_DAYS=30

# Directorio de backups
BACKUP_DIR=backups

# ==========================================
# CONFIGURACIÓN DE CDN (OPCIONAL)
# ==========================================

# URL del CDN para assets estáticos
CDN_URL=

# Bucket de Amazon S3 (si se usa)
AWS_S3_BUCKET=
AWS_S3_REGION=
AWS_S3_KEY=
AWS_S3_SECRET=

# ==========================================
# CONFIGURACIÓN DE ANALYTICS
# ==========================================

# Google Analytics ID
GOOGLE_ANALYTICS_ID=

# Facebook Pixel ID
FACEBOOK_PIXEL_ID=

# ==========================================
# NOTAS IMPORTANTES
# ==========================================

# 1. Nunca subas el archivo .env a Git
# 2. Genera claves seguras para APP_KEY y ENCRYPTION_KEY
# 3. Usa contraseñas fuertes para la base de datos
# 4. En producción, cambia APP_DEBUG a false
# 5. Configura HTTPS en producción
# 6. Usa API keys reales en producción
