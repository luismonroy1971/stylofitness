# ==========================================
# STYLOFITNESS - Variables de Entorno
# ==========================================
# Copia este archivo como .env y configura tus valores

# ==========================================
# CONFIGURACIÓN DE LA APLICACIÓN
# ==========================================
APP_NAME="StyloFitness"
APP_VERSION=1.0.0
APP_ENV=development
APP_DEBUG=true
APP_URL=http://localhost:8000
APP_TIMEZONE=America/Mexico_City

# ==========================================
# CONFIGURACIÓN DE BASE DE DATOS
# ==========================================
DB_CONNECTION=mysql
DB_HOST=localhost
DB_PORT=3306
DB_DATABASE=stylofitness
DB_USERNAME=root
DB_PASSWORD=
DB_CHARSET=utf8mb4
DB_COLLATION=utf8mb4_unicode_ci

# Pool de conexiones
DB_POOL_MIN=5
DB_POOL_MAX=20

# ==========================================
# CONFIGURACIÓN DE EMAIL
# ==========================================
MAIL_DRIVER=smtp
MAIL_MAILER=smtp
MAIL_HOST=localhost
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@stylofitness.com
MAIL_FROM_NAME="StyloFitness"

# Servicios alternativos
# MAILGUN_DOMAIN=
# MAILGUN_SECRET=
# SENDGRID_API_KEY=

# ==========================================
# CONFIGURACIÓN DE PAGOS
# ==========================================

# Stripe
STRIPE_PUBLIC_KEY=
STRIPE_PUBLISHABLE_KEY=
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

# PayPal
PAYPAL_CLIENT_ID=
PAYPAL_CLIENT_SECRET=
PAYPAL_MODE=sandbox

# MercadoPago (opcional)
MERCADOPAGO_PUBLIC_KEY=
MERCADOPAGO_ACCESS_TOKEN=

# ==========================================
# CONFIGURACIÓN de ALMACENAMIENTO
# ==========================================

# Límites de archivos
UPLOAD_MAX_SIZE=10485760
MAX_FILE_UPLOADS=20
UPLOAD_PATH=public/uploads

# Tipos de archivos permitidos
UPLOAD_ALLOWED_TYPES=jpg,jpeg,png,gif,pdf,doc,docx
ALLOWED_IMAGE_EXTENSIONS=jpg,jpeg,png,gif,webp,svg
ALLOWED_VIDEO_EXTENSIONS=mp4,webm,ogg,avi,mov
ALLOWED_DOCUMENT_EXTENSIONS=pdf,doc,docx,xls,xlsx,ppt,pptx

# AWS S3 (opcional)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_URL=
AWS_USE_PATH_STYLE_ENDPOINT=false

# ==========================================
# CONFIGURACIÓN DE CACHE
# ==========================================

# Cache principal
CACHE_DRIVER=file # file, redis, memcached
CACHE_PREFIX=stylofitness
CACHE_DEFAULT_TTL=3600

# Redis (si se usa)
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379
REDIS_DATABASE=0

# Memcached (si se usa)
MEMCACHED_HOST=127.0.0.1
MEMCACHED_PORT=11211

# ==========================================
# CONFIGURACIÓN DE SESIONES
# ==========================================
SESSION_DRIVER=file # file, database, redis
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null
SESSION_SECURE_COOKIE=false
SESSION_HTTP_ONLY=true
SESSION_SAME_SITE=Lax
SESSION_COOKIE_NAME=stylofitness_session

# ==========================================
# CONFIGURACIÓN DE LOGS
# ==========================================
LOG_CHANNEL=daily
LOG_LEVEL=debug
LOG_DAYS=30
LOG_MAX_FILES=30

# Servicios externos de logs
BUGSNAG_API_KEY=
SENTRY_LARAVEL_DSN=

# ==========================================
# CONFIGURACIÓN DE APIS EXTERNAS
# ==========================================

# Servicios de nutrición
NUTRITIONIX_APP_ID=
NUTRITIONIX_API_KEY=

# Google Services
GOOGLE_MAPS_API_KEY=
GOOGLE_ANALYTICS_ID=
GOOGLE_TAG_MANAGER_ID=

# Analytics
FACEBOOK_PIXEL_ID=

# Social Login
FACEBOOK_APP_ID=
FACEBOOK_APP_SECRET=
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# ==========================================
# CONFIGURACIÓN DE NOTIFICACIONES
# ==========================================

# Push notifications
FIREBASE_SERVER_KEY=
FIREBASE_SENDER_ID=
PUSHER_APP_ID=
PUSHER_APP_KEY=
PUSHER_APP_SECRET=
PUSHER_APP_CLUSTER=mt1

# SMS (Twilio)
TWILIO_SID=
TWILIO_TOKEN=
TWILIO_FROM=

# WhatsApp Business
WHATSAPP_BUSINESS_ID=
WHATSAPP_ACCESS_TOKEN=

# ==========================================
# CONFIGURACIÓN DE SEGURIDAD
# ==========================================

# Encriptación
APP_KEY=base64:GENERA_UNA_CLAVE_SEGURA_DE_32_CARACTERES
JWT_SECRET=your-jwt-secret-key-here-change-in-production
ENCRYPTION_KEY=your-encryption-key-here-change-in-production
HASH_ALGO=bcrypt
HASH_ROUNDS=12

# Password Security
CSRF_TOKEN_LIFETIME=3600
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_NUMBERS=true
PASSWORD_REQUIRE_SYMBOLS=true

# Rate Limiting
LOGIN_MAX_ATTEMPTS=5
LOGIN_LOCKOUT_DURATION=900

# CORS
CORS_ALLOWED_ORIGINS=https://tudominio.com,https://www.tudominio.com
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization,X-Requested-With

# Rate limiting
RATE_LIMIT_MAX_ATTEMPTS=100
API_RATE_LIMIT=100
API_RATE_LIMIT_WINDOW=3600
RATE_LIMIT_DECAY_MINUTES=1

# ==========================================
# CONFIGURACIÓN DE DESARROLLO
# ==========================================

# Debug y testing
TELESCOPE_ENABLED=false
DEBUGBAR_ENABLED=false
DEBUG_BAR_ENABLED=true
QUERY_LOG_ENABLED=true
PROFILER_ENABLED=false

# Comandos específicos de desarrollo
DEV_SEED_DATABASE=false
DEV_FAKE_EMAILS=false

# Performance
OPCACHE_ENABLED=true
COMPRESSION_ENABLED=true
MINIFY_HTML=false
MINIFY_CSS=false
MINIFY_JS=false

# ==========================================
# CONFIGURACIÓN ESPECÍFICA DE STYLOFITNESS
# ==========================================

# Configuración del gimnasio
GYM_NAME="Tu Gimnasio"
GYM_ADDRESS="Tu Dirección Completa"
GYM_PHONE="+51999888777"
GYM_EMAIL="info@tudominio.com"
GYM_TIMEZONE="America/Lima"
GYM_CURRENCY="PEN"
GYM_CURRENCY_SYMBOL="S/"

